NODE_ENV=production # production | development | test
PORT=3000

# Database Configuration (Single PostgreSQL instance with multiple databases)
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_PORT=5432

# Database Names (change DATABASE_NAME based on environment)
DATABASE_NAME=urgara_jornales_api_prod  # Use: urgara_jornales_api_prod | urgara_jornales_api_dev | urgara_jornales_api_test

# URLs de base de datos para cada entorno
# IMPORTANTE: Cambia el host según tu configuración:
# - Para desarrollo LOCAL (sin Docker): Usa @localhost:5432
# - Para deployment con DOCKER (EC2, producción): Usa @postgres:5432 (nombre del servicio)

# Ejemplos para desarrollo LOCAL:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/urgara_jornales_api_prod?schema=public
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/urgara_jornales_api_dev?schema=public
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/urgara_jornales_api_test?schema=public

# Ejemplos para deployment con DOCKER:
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/urgara_jornales_api_prod?schema=public
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/urgara_jornales_api_dev?schema=public
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/urgara_jornales_api_test?schema=public

# URL actual de base de datos (cambia @localhost a @postgres para Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/urgara_jornales_api_prod?schema=public

# JWT Configuration
JWT_SECRET_CLIENT=your_jwt_secret_key_here_change_in_production
JWT_SECRET_REFRESH=your_jwt_refresh_secret_key_here_change_in_production
# COOKIE
COOKIE_SECRET=your_cookie_secret
# Application Configuration
CORS_ORIGIN=http://localhost:3001
