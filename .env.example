NODE_ENV=production # production | development | test
PORT=3000

# Database Configuration - Amazon RDS PostgreSQL
# Este proyecto usa dos bases de datos separadas en Amazon RDS

# Common Database URL - Base de datos compartida entre localidades
# Contiene: Admin, Session, Locality, LegalEntity, Company
# Local development:
# DATABASE_COMMON_URL=postgresql://postgres:postgres@localhost:5432/common-reports-urgara?schema=public
# Amazon RDS (producción):
DATABASE_COMMON_URL=postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/common-reports-urgara?schema=public

# Locality Database URL - Base de datos específica por localidad
# Contiene: WorkShift, Worker, WorkerAssignment
# NOTA: El nombre de la base de datos debe seguir el patrón {locality}-reports-urgara
# Ejemplos de nombres: mardelplata-reports-urgara, buenosaires-reports-urgara
# Local development:
# DATABASE_LOCALITY_URL=postgresql://postgres:postgres@localhost:5432/{locality}-reports-urgara?schema=public
# Amazon RDS (producción):
DATABASE_LOCALITY_URL=postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/{locality}-reports-urgara?schema=public

# JWT Configuration
JWT_SECRET_CLIENT=your_jwt_secret_key_here_change_in_production
JWT_SECRET_REFRESH=your_jwt_refresh_secret_key_here_change_in_production
# COOKIE
COOKIE_SECRET=your_cookie_secret
# Application Configuration
CORS_ORIGIN=http://localhost:3001
